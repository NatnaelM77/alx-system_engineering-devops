#!/usr/bin/env bash
# Install nginx web server
sudo apt-get -y update
sudo apt-get -y install nginx

sudo mkdir /etc/nginx/www/html
sudo touch /etc/nginx/www/html/index.html

echo "Hello World!" > /etc/nginx/www/html/index.html
printf %s "server {
	listen 80 default_server;
	listen [::]:80 default_server;
	root /etc/nignx/www/html;
	index index.html;
}
" > /etc/nginx/sites-available/default

sudo service nginx restart
